<% layout('layouts/boilerplate') -%>
<h1>Transactions</h1>
<ul>
  <% for (const tr of transactions) {%>
    <div class="card my-3">
      <h5 class="card-header"><%=tr.description%></h5>
      <div class="card-body row">
        <div class="col">
          <h5 class="card-title d-inline"><%=tr.type%></h5>
          <p class="card-text d-inline"><%= tr.amount %> </p>
        </div>
        <div class="col-auto">
          <a href="/transactions/<%= tr._id%>" class="btn btn-primary d-inline">Details</a>
        </div>
      </div>
    </div>
  <%}%>
</ul>
